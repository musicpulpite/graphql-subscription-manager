{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": ["ES2020"],
      "noImplicitAny": false,
      "rootDir": "./src",
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "pretty": true,
      "removeComments": true,
      "declaration": true,
      "downlevelIteration": true
    },
    "exclude": [
      "node_modules",
      "dist",
      "test"
    ]
  }