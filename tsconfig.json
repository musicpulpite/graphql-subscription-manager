{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "lib": ["es6", "dom", "esnext"],
      "noImplicitAny": false,
      "rootDir": "./src",
      "outDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "pretty": true,
      "removeComments": true,
      "declaration": true,
      "typeRoots": ["node_modules/@types"],
      "downlevelIteration": true
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }